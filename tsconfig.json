{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2021",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"outDir": "dist"
	},
	"lib": ["ES2021"],
	"exclude": ["./templates", "./spikes", "./lib", "./out"]
}
